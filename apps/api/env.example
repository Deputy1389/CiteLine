# Core API
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/citeline
PORT=8000

# CORS: comma-separated frontend origins
CORS_ALLOW_ORIGINS=http://localhost:3000,https://app.ontogra.com
CORS_ALLOW_CREDENTIALS=true
ALLOWED_HOSTS=api.ontogra.com,localhost,127.0.0.1

# Strict security mode:
# true = require internal auth token + tenant identity and enforce tenant scope
HIPAA_ENFORCEMENT=true
API_INTERNAL_AUTH_MODE=jwt
API_INTERNAL_JWT_SECRET=replace-with-long-random-shared-secret-at-least-32-chars
API_INTERNAL_JWT_TTL_SECONDS=60
# Optional static fallback only if API_INTERNAL_AUTH_MODE=static or either
API_INTERNAL_TOKEN=replace-with-long-random-shared-secret

# Request-level audit logs (recommended true)
HIPAA_AUDIT_LOGGING=true

# Keep false in production. Only for local dev while HIPAA_ENFORCEMENT=true.
HIPAA_ALLOW_DEFAULT_LOCAL_STORAGE=false

# API abuse controls
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=180
MAX_REQUEST_BYTES=26214400
MAX_UPLOAD_BYTES=26214400
SECURITY_HEADERS_ENABLED=true
